{
  "manifest_version": 3,
  "name": "Gmail Profile Pic Checker",
  "version": "1.2.0",
  "description": "Filter Gmail compose recipients based on profile picture presence (3 modes).",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Gmail Pic Checker",
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png"
    }
},
  "icons": {
    "48": "icons/icon48.png"
  }
}
